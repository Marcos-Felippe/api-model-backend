                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "userId": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "login": {  
                                        "value": {
                                            "token": "060qqf858a6-gqgeg573f-4fegwgewgw5b-wevwgwfq8wgw6a3fqfqf-9ccceegwgb4065c6",
                                            "userId": "060858a6-573f-4f5b-86a3-9ccceb4065c6"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{owner}/project": {
            "post": {
                "sumary": "Cadastro de um projeto",
