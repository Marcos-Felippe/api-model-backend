{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação de usuarios e projetos",
        "description": "API com objetivo de criar, autenticar, selecionar, editar e deletar usuarios e seus projetos",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API de test"
        }
    ],
    "paths": {
        "/user": {
            "post": {
                "sumary": "Cadastro de usuario",
                "description": "Rota responsavel por fazer o cadastro de um novo usuario",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "user": {  
                                    "value":{
                                        "email": "email@provider.com",
                                        "password": "senha@192$B"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "422": {
                        "description": "User Already Exists"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "user": {  
                                        "value": {
                                            "user": {
                                                "id": "060858a6-573f-4f5b-86a3-9ccceb4065c6",
                                                "email": "email@provider.com"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{id}": {
            "get": {
                "sumary": "Pegar usuario",
                "description": "Rota responsavel por pegar um usuario cadastro",
                "tags": ["Users"],
                "security": [{ "BearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do usuario para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Missing Values"
                    },
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "user": {
                                        "value": {
                                            "user": {
                                                "id": "060858a6-573f-4f5b-86a3-9ccceb4065c6",
                                                "email": "email@provider.com"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "sumary": "Atualizar usuario",
                "description": "Rota responsavel por fazer a atualização de um dado de um usuario cadastrado",
                "tags": ["Users"],
                "security": [{ "BearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do usuario para busca",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "all": {  
                                    "value":{
                                        "email": "emailatualizado@provider.com",
                                        "password": "senha14795@192$B"
                                    }
                                },
                                "email": {  
                                    "value":{
                                        "email": "emailatualizado@provider.com"
                                    }
                                },
                                "password": {  
                                    "value":{
                                        "password": "senha14795@192$B"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Missing Values"
                    },
                    "201": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "all": {  
                                        "value": {
                                            "message": "Email and Password Updated"
                                        }
                                    },
                                    "email": {  
                                        "value": {
                                            "message": "Email Updated"
                                        }
                                    },
                                    "password": {  
                                        "value": {
                                            "message": "Password Updated"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "sumary": "Deletar usuario",
                "description": "Rota responsavel por fazer a deleção de um usuario cadastrado",
                "tags": ["Users"],
                "security": [{ "BearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do usuario para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Missing Values"
                    },
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "deletedMessage": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "user": {  
                                        "value": {
                                            "deletedMessage": "User deleted"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "sumary": "Login do usuario",
                "description": "Rota responsavel por fazer o login de um usuario cadastrado",
                "tags": ["Login"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "login": {  
